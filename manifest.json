{
  "manifest_version": 3,
  "name": "AI Agent Assistant",
  "version": "0.1.0",
  "description": "A simple Chrome extension that sends prompts to an AI agent.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html", "default_title": "AI Agent" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
